{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2023"
        ],
        "module": "CommonJS",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@http/*": [
                "src/adapters/http/*"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    }
}
