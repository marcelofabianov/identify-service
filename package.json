{
    "name": "fastify-mongo",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "license": "CC0-1.0",
    "author": "Marcelo Fabiano",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "start": "node dist/main.js",
        "dev": "tsx watch --env-file .env src/main.ts",
        "debug": "tsx watch --env-file .env --inspect src/main.ts",
        "build": "tsup src/main.ts --minify --dts --format cjs,esm --out-dir dist",
        "lint": "eslint src",
        "lint:fix": "eslint --fix --quiet src && prettier -w src",
        "test": "NODE_ENV=test && vitest run --dir ./tests/unit",
        "test:watch": "NODE_ENV=test && vitest --watch --dir ./tests/unit",
        "test:debug": "NODE_ENV=test && vitest --inspect-brk --dir ./tests/unit --watch --pool forks --poolOptions.forks.singleFork",
        "test:coverage": "NODE_ENV=test && vitest run --coverage --dir ./tests/unit",
        "test:coverage-ui": "NODE_ENV=test && vitest --coverage --ui --dir ./tests/unit",
        "test:report": "NODE_ENV=test && vitest run --reporter=json --dir ./tests/unit --outputFile=./tests/output/unit/reporters/json",
        "test:e2e": "NODE_ENV=test && vitest run --dir ./tests/e2e",
        "test:e2e-watch": "NODE_ENV=test && vitest --watch --dir ./tests/e2e",
        "test:e2e-debug": "NODE_ENV=test && vitest --inspect-brk --dir ./tests/e2e --watch --pool forks --poolOptions.forks.singleFork",
        "test:e2e-ui": "NODE_ENV=test && vitest --ui --dir ./tests/e2e",
        "test:all": "NODE_ENV=test && vitest run --dir ./tests",
        "test:all-watch": "NODE_ENV=test && vitest --watch --dir ./tests",
        "studio": "prisma studio"
    },
    "dependencies": {
        "@prisma/adapter-pg": "5.13.0",
        "@prisma/client": "5.13.0",
        "argon2": "0.40.1",
        "fastify": "4.26.2",
        "pg": "8.11.5",
        "zod": "3.23.5"
    },
    "devDependencies": {
        "@types/node": "20.12.7",
        "@types/supertest": "6.0.2",
        "@typescript-eslint/eslint-plugin": "7.7.1",
        "@typescript-eslint/parser": "7.7.1",
        "@vitest/coverage-v8": "1.5.3",
        "@vitest/ui": "1.5.3",
        "eslint": "8.56.0",
        "prettier": "3.2.5",
        "prettier-eslint": "16.3.0",
        "prisma": "5.13.0",
        "supertest": "7.0.0",
        "ts-node": "10.9.2",
        "tsup": "8.0.2",
        "tsx": "4.7.3",
        "typescript": "5.4.5",
        "vite-tsconfig-paths": "4.3.2",
        "vitest": "1.5.3"
    }
}
